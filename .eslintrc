{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": false,
    "jquery": false
  },
  "extends": ["airbnb", "prettier", "prettier/react"],
  "rules": {
    "prettier/prettier": ["error"],
    "brace-style": "error",
    "arrow-parens": 1,
    "radix": "error",
    "object-curly-newline": "off",
    "yoda": "error",
    "func-names": "off",
    "comma-dangle": "warn",
    "no-const-assign": "error",
    "no-console": [
      "error",
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-var": "error",
    "no-unused-vars": "error",
    "require-yield": "off",
    "jsx-a11y/href-no-hash": ["off"],
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "max-len": [
      "warn",
      {
        "tabWidth": 2,
        "ignoreComments": false,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ]
  },
  "globals": {
    "sails": true,
    "TEntry": true,
    "EntryService": true,
    "TComment": true,
    "CommonService": true,
    "CommentService": true,
    "TCave": true,
    "TGrotto": true,
    "TCaver": true,
    "TTopography": true,
    "TMassif": true,
    "TokenAuthService": true,
    "ControllerService": true,
    "MappingV1Service": true,
    "L": true,
    "GrottoService": true,
    "GeoLocService": true,
    "SettingsService": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": false
    }
  },
  "plugins": ["prettier"]
}
